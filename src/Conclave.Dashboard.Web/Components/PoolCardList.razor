<div class="mx-2">
  <div class="flex flex-col items-center justify-between md:flex-row mb-6">
    @Title
    <div class="flex">
      @SearchBox
    </div>
  </div>
  <div class="grid place-content-center grid-cols-1 smtab:grid-cols-2 tab:grid-cols-3 lg:grid-cols-2 laptop:grid-cols-3 gap-1 border-2">
    @ChildContent
  </div>
  <div class="mt-6 lg:mt-5 text-right mb-[70px] md:mb-0">
    <MudPagination Rectangular="true" Variant="Variant.Text" BoundaryCount="1" MiddleCount="1" Count="PageCount"
      Color="Color.Surface" DisableElevation="true" />
  </div>
</div>