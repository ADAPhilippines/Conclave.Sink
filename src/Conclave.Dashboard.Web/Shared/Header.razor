@inherits ConclaveComponentBase

<header class="absolute top-0 left-0 right-0 z-[2000]">
    <div class="flex justify-between items-center py-[21px] lg:py-[17px] px-[18px] lg:px-[38px]">

        <MudLink Href="/staking">
            <div class="flex items-center gap-[9px] lg:gap-[12px]">
                <div class="w-[35px] lg:w-[44px]">
                    <MudImage Width="100" Src="images/conclave-logo.svg" Alt="Conclave logo" />
                </div>
                <div class="w-[82px] lg:w-[103px]">
                    <MudImage Width="100" Src="images/conclave-text.svg" Alt="Conclave text" />
                </div>
            </div>
        </MudLink>

        @* <h1 class="hidden lg:block text-white font-medium text-[24px] mr-auto ml-[100px]">Staking</h1> *@
       
        <div class="flex items-center gap-6">
            <div class="@(IsDrawerOpen ? "block" : "hidden")  !lg:hidden">
                <MudToggleIconButton Color="Color.Secondary">
                    <MudImage Src="images/moon.svg" Alt="Moon icon" />
                </MudToggleIconButton>
            </div>
            
            <button class="w-[25px] relative lg:hidden" onclick="@(() => ToggleDrawer())">
                <div class="burger-menu relative w-full @(IsDrawerOpen == false ? "" : "open")">
                    <span class="top absolute left-0 bottom-[6px] h-0.5 w-full bg-white duration-200 ease-linear rounded"></span>
                    <span class="middle h-0.5 w-full left-0 bg-white absolute duration-200 ease-linear rounded"></span>
                    <span class="bottom absolute top-[8px] left-0 h-0.5 w-full bg-white duration-200 rounded"></span>
                </div>
            </button>            

            <div class="hidden lg:flex items-center gap-[17px]">
                <ThemeSwitch />
                
                @if (_isConnected)
                {
                    <div class="relative">
                        <div class="py-[12.5px] px-[24px] rounded-[50px] border-[1px] border-[#ffffff1a] border-solid">
                            <div class="flex items-center gap-2">
                                <MudImage Src="images/nami.svg" Alt="Nami logo" />
                                <span class="lowercase font-normal text-white">@WalletAddress</span>
                                <MudButton OnClick="OnDropDownClicked" Class="!min-w-fit !p-0">
                                    <MudIcon Icon="@Icons.Filled.KeyboardArrowDown" />
                                </MudButton>
                            </div>
                        </div>

                        <div class="@(_isDropDownVisible ? "block" : "hidden") absolute bottom-[-243px] w-full">
                            <ConnectedWalletDropDownMenu OnDisconnectBtnClicked="DisconnectWallet" AdaBalance="1000" CnclvBalance="5000" />
                        </div>
                    </div>
                }
                else
                {
                    <MudPaper Elevation="1" Class="!bg-transparent !rounded-[50px] !border-[1px] !border-[#41fbfb] !border-solid">
                        <MudButton OnClick="ConnectWallet" Class="!text-white !py-[12.5px] !px-[24px]">
                            Connect Wallet
                        </MudButton>
                    </MudPaper>
                }
                
            </div>
        </div>
    </div>
</header>
