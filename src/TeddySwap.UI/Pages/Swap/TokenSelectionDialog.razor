@using TeddySwap.UI.Models

<MudDialog ClassContent="select-token-dialog" Class="w-[92%] max-w-[600px] h-[469px] overflow-y-hidden">
    <DialogContent>
        <MudIconButton
            OnClick="@(() => MudDialog.Close())"
            Class="absolute top-[-56px] right-[10px] z-[10]"
            Icon="@Icons.Material.Filled.Close"
            aria-label="close"
        >
        </MudIconButton>
        <MudTextField
            FullWidth
            Immediate
            Placeholder="Search"
            @bind-Value="_searchValue"
            Variant="Variant.Outlined"
            Adornment="Adornment.Start"
            AdornmentIcon="@Icons.Material.Filled.Search"
            Class="mb-3"
        >
        </MudTextField>
        <MudList Clickable="true" Class="overflow-y-auto !py-0">
            @foreach (Token token in _filteredTokens)
            {
                <TokenSelectionDialogItem Token="token" OnSelectedTokenClicked="OnSelectedTokenClicked" />
            }
        </MudList>
    </DialogContent>
</MudDialog>
