@inherits TeddySwapBasePage

<MudChip
    OnClick="OpenSelectTokenDialog"
    Class="absolute py-[18px] px-[12px] right-px top-[6px]"
    Color="Color.Primary"
>
    <div class="flex items-center gap-2 py-[18px]">
        <MudImage Src=@CurrentlySelectedToken.Logo Height="24" Width="24" />
        <MudText class="font-semibold">@CurrentlySelectedToken.Name</MudText>
    </div>
</MudChip>
